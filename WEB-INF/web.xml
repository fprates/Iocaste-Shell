<?xml version="1.0" encoding="utf-8"?>
<web-app id="iocaste_tests" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
    <description>iocaste shell</description>
    <display-name>iocaste shell</display-name>
    
    <servlet>
        <servlet-name>iocaste_shell</servlet-name>
        <servlet-class>org.iocaste.shell.ShellServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_shell</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>iocaste_login</servlet-name>
        <servlet-class>org.iocaste.shell.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_login</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>org.iocaste.protocol.HibernateListener</listener-class>
    </listener>
    
    <resource-ref>
        <description>iocaste db access</description>
        <res-ref-name>jdbc/iocaste</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>