<?xml version="1.0" encoding="utf-8"?>
<web-app id="iocaste_tests" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
    <description>iocaste shell</description>
    <display-name>iocaste shell</display-name>
    
    <servlet>
        <servlet-name>iocaste_shell_srv</servlet-name>
        <servlet-class>org.iocaste.shell.server.Servlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_shell_srv</servlet-name>
        <url-pattern>/services.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>jsf_servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>jsf_servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>org.iocaste.protocol.HibernateListener</listener-class>
    </listener>
    
    <resource-ref>
        <description>iocaste db access</description>
        <res-ref-name>jdbc/iocaste</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>